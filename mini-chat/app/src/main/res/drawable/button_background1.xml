
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FB9393" /> <!-- Couleur lors de l'appui -->
            <corners android:radius="12dp" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/>
            <size android:width="200dp" android:height="48dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0B0B" /> <!-- Couleur normale -->
            <corners android:radius="12dp" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/>
            <size android:width="200dp" android:height="48dp"/>
        </shape>
    </item>
</selector>
